# Base image
FROM node:18-alpine

# Set work directory
WORKDIR /app

# Copy package files
COPY package*.json ./
COPY nx.json ./
COPY tsconfig.base.json ./
COPY apps/api ./apps/api
COPY libs ./libs

# Install dependencies
RUN npm install

# Build the NestJS backend
RUN npx nx build car-markt-be

# Expose port
EXPOSE 3000

# Start the backend
CMD ["node", "dist/apps/api/main.js"]
